<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degrade_background"
    tools:context=".activity.MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="295dp"
        android:layout_height="388dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.492" />

    <View
        android:id="@+id/circulo_icone"
        android:layout_width="176dp"
        android:layout_height="167dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/icone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewUser"
        style="@style/retangulo"
        android:layout_width="243dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/viewSenha" />

    <View
        android:id="@+id/viewSenha"
        style="@style/retangulo"
        android:layout_width="243dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/circulo_icone" />

    <EditText
        android:id="@+id/edtEmail"
        style="@style/placeholder"
        android:layout_width="166dp"
        android:layout_height="38dp"
        android:hint="Email"
        android:paddingLeft="2dp"
        android:textColor="#000000"
        android:textColorHint="#99000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewSenha"
        app:layout_constraintEnd_toEndOf="@+id/viewSenha"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/viewSenha" />

    <EditText
        android:id="@+id/edtSenha"
        style="@style/placeholder"
        android:layout_width="168dp"
        android:layout_height="37dp"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#99000000"
        app:layout_constraintBottom_toBottomOf="@+id/viewUser"
        app:layout_constraintEnd_toEndOf="@+id/viewUser"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/viewUser" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintBottom_toBottomOf="@+id/viewSenha"
        app:layout_constraintStart_toStartOf="@+id/viewSenha"
        app:layout_constraintTop_toTopOf="@+id/viewSenha" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/baseline_lock_24"
        app:layout_constraintBottom_toBottomOf="@+id/viewUser"
        app:layout_constraintStart_toStartOf="@+id/viewUser"
        app:layout_constraintTop_toTopOf="@+id/viewUser"
        app:layout_constraintVertical_bias="0.592" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Forgot Password?"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/viewUser" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="234dp"
        android:layout_height="48dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/btn_degrade"
        android:text="login"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/cadastro"
        app:layout_constraintVertical_bias="0.729" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="116dp"
        android:layout_height="106dp"
        app:layout_constraintBottom_toBottomOf="@+id/circulo_icone"
        app:layout_constraintEnd_toEndOf="@+id/circulo_icone"
        app:layout_constraintStart_toStartOf="@+id/circulo_icone"
        app:layout_constraintTop_toTopOf="@+id/circulo_icone"
        app:srcCompat="@drawable/icons8_totoro_100" />

    <TextView
        android:id="@+id/cadastro"
        android:layout_width="62dp"
        android:layout_height="15dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="Cadastrar-se"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/viewUser" />

</androidx.constraintlayout.widget.ConstraintLayout>