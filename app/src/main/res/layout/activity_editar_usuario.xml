<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degrade_background"
    tools:context=".activity.EditarUsuario">

    <View
        android:id="@+id/whiteSquare"
        android:layout_width="340dp"
        android:layout_height="577dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="31dp"
        android:background="@drawable/view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></View>

    <TextView
        android:id="@+id/textEditar"
        style="@style/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Editar"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/whiteSquare"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toStartOf="@+id/whiteSquare"
        app:layout_constraintTop_toTopOf="@+id/whiteSquare" />

    <TextView
        android:id="@+id/textNome"
        style="@style/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Nome"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/whiteSquare"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="@+id/whiteSquare"
        app:layout_constraintTop_toBottomOf="@+id/textEditar" />

    <TextView
        android:id="@+id/textEmail"
        style="@style/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Email"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/whiteSquare"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="@+id/whiteSquare"
        app:layout_constraintTop_toBottomOf="@+id/retangulo" />

    <View
        android:id="@+id/retangulo"
        style="@style/retangulo"
        app:layout_constraintEnd_toEndOf="@+id/whiteSquare"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNome" />


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintBottom_toBottomOf="@+id/retangulo"
        app:layout_constraintEnd_toStartOf="@+id/edtUsuario"
        app:layout_constraintStart_toStartOf="@+id/retangulo"
        app:layout_constraintTop_toTopOf="@+id/retangulo" />

    <EditText
        android:id="@+id/edtUsuario"
        style="@style/placeholder"
        android:layout_width="182dp"
        android:layout_height="27dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:hint="username"
        android:textColor="#000000"
        android:textColorHint="#66000000"
        app:layout_constraintBottom_toBottomOf="@+id/retangulo"
        app:layout_constraintEnd_toEndOf="@+id/retangulo"
        app:layout_constraintHorizontal_bias="0.835"
        app:layout_constraintStart_toStartOf="@+id/retangulo"
        app:layout_constraintTop_toTopOf="@+id/retangulo"
        app:layout_constraintVertical_bias="0.533" />

    <View
        android:id="@+id/retanguloEmail"
        style="@style/retangulo"
        app:layout_constraintEnd_toEndOf="@+id/whiteSquare"
        app:layout_constraintHorizontal_bias="0.356"
        app:layout_constraintStart_toStartOf="@+id/whiteSquare"
        app:layout_constraintTop_toBottomOf="@+id/textEmail" />


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_email_24"
        app:layout_constraintBottom_toBottomOf="@+id/retanguloEmail"
        app:layout_constraintEnd_toStartOf="@+id/edtEmail"
        app:layout_constraintStart_toStartOf="@+id/retanguloEmail"
        app:layout_constraintTop_toTopOf="@+id/retanguloEmail" />

    <EditText
        android:id="@+id/edtEmail"
        style="@style/placeholder"
        android:layout_width="182dp"
        android:layout_height="27dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#66000000"
        app:layout_constraintBottom_toBottomOf="@+id/retanguloEmail"
        app:layout_constraintEnd_toEndOf="@+id/retanguloEmail"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="@+id/retanguloEmail"
        app:layout_constraintTop_toTopOf="@+id/retanguloEmail"
        app:layout_constraintVertical_bias="0.466" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEditar"
        android:layout_width="126dp"
        android:layout_height="44dp"
        android:layout_marginBottom="116dp"
        android:background="@drawable/btn_degrade"
        android:text="Editar"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/whiteSquare"
        app:layout_constraintEnd_toEndOf="@+id/whiteSquare"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="130dp"
        android:layout_height="160dp"
        app:layout_constraintBottom_toTopOf="@+id/retangulo"
        app:layout_constraintEnd_toEndOf="@+id/whiteSquare"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toEndOf="@+id/textEditar"
        app:layout_constraintTop_toTopOf="@+id/whiteSquare"
        app:layout_constraintVertical_bias="0.631"
        app:srcCompat="@drawable/icone_editar" />

</androidx.constraintlayout.widget.ConstraintLayout>